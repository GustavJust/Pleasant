<div class="header_container">
  <div class="search">
    <button class="search_button">&#9906;</button>
  </div>
  <div class="logo">
    <a href="">
      <img src="./assets/imgs/logo_black.svg" alt="logo" />
    </a>
  </div>
  <div class="icons">
    <a href="" class="icon_button"
      ><img src="/assets/imgs/burger_icon.svg" alt="Menu" /></a
    >
    <a href="" class="icon_button"
      ><img src="/assets/imgs/cart_icon.svg" alt="cart" /></a
    >
  </div>
</div>

<style>
  body {
    margin: 0;
  }
  .header_container {
    position: fixed;
    border: 1px solid black;
    background-color: white;
    margin: 0;
    display: flex;
    flex-direction: row;
    width: calc(100vw - 2px);
    z-index: 1000;
  }
  div.logo {
    display: flex;
    justify-content: center;
    width: 100%;
    > a img {
      width: 70px;
    }
  }
  div.icons {
    display: flex;
    flex-direction: row-reverse;
    width: 0%;
    align-items: center;
    > a img {
      transform: scale(0.9);
    }
  }
  .icon_button {
    margin-right: 30px;
  }
  div.logo a:hover img {
    animation: spinY 2s linear infinite;
    transform-style: preserve-3d;
    display: inline-block;
    transform-origin: center center;
  }
  @keyframes spinY {
    from {
      transform: rotateY(0deg);
    }
    to {
      transform: rotateY(360deg);
    }
  }
  .search {
    width: 0%;
    display: flex;

    > .search_button {
      background-color: transparent;
      border: none;
      font-size: 2em;
      transform: rotate(45deg);
      margin: 0 0 0 30px;
      padding: 0;
      justify-content: center;
      align-items: center;
    }
    > .search_button:hover {
      cursor: pointer;
    }
  }
</style>
